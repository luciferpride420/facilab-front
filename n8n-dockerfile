FROM n8nio/n8n:latest

# Set environment variables
ENV N8N_BASIC_AUTH_ACTIVE=true
ENV N8N_BASIC_AUTH_USER=admin
ENV N8N_BASIC_AUTH_PASSWORD=changeme123
ENV N8N_HOST=0.0.0.0
ENV N8N_PORT=5678
ENV N8N_PROTOCOL=https

# Database configuration
ENV DB_TYPE=postgresdb
ENV DB_POSTGRESDB_HOST=db.oifzajfklrrtsjnqoini.supabase.co
ENV DB_POSTGRESDB_PORT=5432
ENV DB_POSTGRESDB_DATABASE=postgres
ENV DB_POSTGRESDB_USER=postgres
ENV DB_POSTGRESDB_PASSWORD=YOUR_SUPABASE_PASSWORD
ENV DB_POSTGRESDB_SCHEMA=n8n

# Additional settings
ENV N8N_LOG_LEVEL=info
ENV N8N_METRICS=true
ENV N8N_DIAGNOSTICS_ENABLED=false

EXPOSE 5678

CMD ["n8n", "start"]

